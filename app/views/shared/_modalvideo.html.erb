<!-- MODAL VIDEO -->

<div class="modal fade bd-example-modal-lg" id="video" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-body">
        <div id="fermer-modal-ajout" data-toggle="modal" data-target=".bd-example-modal-lg" data-backdrop="static">
          <%= link_to add_path do%>
            <i class="fas fa-times"></i>
          <% end  %>
        </div>
        <div class="conteneur-modal-ajout">
          <h1 id='titre-ajout'>Add a video memory</h1>
          <%= simple_form_for [@memory] do |f| %>
            <div class="row justify-content-center">
              <div class="col-xs-12 col-md-7">
                <%= f.input :memory_type, input_html: { id: 'special_categorie', value: "video" }, as: :hidden  %>
                <%= f.input :title, label: 'Your video name' %>
                <%= f.input :description, label: 'Tell me more about this video' %>
                <%= f.label 'Your stamps*', autofocus: true %>
                <div class="stamps-form">
                  <%= select_tag 'memory[stamps][]', options_for_select(Stamp.all.pluck(:title)), multiple: 'multiple', class: 'form-control select2'%>
                </div>
                <%= f.input :photo, label: 'Upload your video' %>
                <%= f.input :photo_cache, as: :hidden %>
              </div>
              <div class="submit-add-button">
                <%= f.submit 'Add a memory', class: "btn boutton-rouge boutton-rouge-inside" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:js) do %>
  <script>
    $('#video').modal('show');
  </script>
<% end %>

