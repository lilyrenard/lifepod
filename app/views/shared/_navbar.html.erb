<div class="navbar-wagon">
  <% if user_signed_in? %>

    <div class="navbar-wagon-left">
      <!-- Logo -->
      <%= link_to root_path do %>
        <%= image_tag "logo.svg" %>
      <% end %>
      <div class="navbar-searchbar">
        <%= render 'shared/searchbar' %>
      </div>
    </div>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right">

      <!-- Links when logged in -->
      <% if ((params["controller"] == "memboard") || ((params["controller"] == "memories") && ((params["action"] == "index") || (params["action"] == "show")))) %>
        <%= link_to "Explore", memboard_path, class: "btn boutton-rouge boutton-rouge-border" %>
        <%= link_to "Add a memory", add_path, class: "btn boutton-rouge boutton-rouge-inside", id: "add" %>
      <% else %>
        <%= link_to "Explore", memboard_path, class: "btn boutton-rouge boutton-rouge-inside" %>
        <%= link_to "Add a memory", add_path, class: "btn boutton-rouge boutton-rouge-border", id: "add" %>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profile_path do %>
                <span><i class="fas fa-user"></i> Profile</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: " Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item d-block d-md-none">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to profile_path do %>
                <span><i class="fas fa-user"></i> Profile</span>
              <% end %></li>
        <li><%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: " Log out") %>
              <% end %></li>
      </ul>
    </div>
  </div>

  <% else %>
      <!-- Logo -->
    <%= link_to root_path do %>
      <%= image_tag "logo.svg" %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <!-- Login link (when logged out) -->
      <button type="button" class="btn boutton-rouge boutton-rouge-inside sign" data-toggle="modal" data-target=".bs-example-modal-sm">Sign in</button>
    </div>
    <%= render 'shared/modalsmall' %>
  <% end %>
</div>







